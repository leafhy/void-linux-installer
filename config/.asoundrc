# 'format s16_le' causes Alsa to play too fast
# Appears to be 'Void Linux' specific as it doesn't occur on 'Kiss Linux' with the same config

pcm.sndio {
type asym
playback.pcm "sndio-play"

hint {
	    show on description "OpenBSD sndio"
	    }
	    }
	    
	    pcm.sndio-play {
	    type plug
	    slave {
	    pcm "sndio-raw"
	    rate 48000
	    format s32_le
	    channels 2
}
}
	    
 pcm.sndio-raw {
 type file
 slave.pcm null
	    
 format raw
 file "| aucat -f snd/0 -i -"
}
pcm.default sndio
